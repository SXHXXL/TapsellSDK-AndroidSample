<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ir.tapsell.samplev3.MainActivity">

        <Button
            android:id="@+id/btnRequestAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Video Ad"
            />

        <Button
            android:id="@+id/btnShowAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Video Ad"
            />

        <Button
            android:id="@+id/btnPrerollNexage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preroll Ads (Nexage)"
            />

        <Button
            android:id="@+id/btnPrerollExoPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preroll Ads (ExoPlayer)"
            />

        <Button
            android:id="@+id/btnNativeBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Native Banner Ads"
            />

        <Button
            android:id="@+id/btnNativeBannerInList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Native Banner Ads In List"
            />

        <Button
            android:id="@+id/btnNativeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Native Video Ads"
            />

        <Button
            android:id="@+id/btnStandardBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard Banner Ads"
            />

    </LinearLayout>
</ScrollView>
